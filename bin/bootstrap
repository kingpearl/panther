# fi

PKG=docker
if [ ! -f .installed-$PKG ];
then
echo "Apt install Docker"
sudo apt update
sudo apt install -y apt-transport-https ca-certificates curl software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"
sudo apt update
sudo apt install -y $PKG-ce $PKG-ce-cli containerd.io && sudo usermod -aG docker $USER && touch .installed-$PKG
fi

PKG=virtualbox
if [ ! -f .installed-$PKG ];
then
echo "Apt install Virtualbox"
sudo apt install -y virtualbox virtualbox-dkms virtualbox-guest-additions-iso && sudo usermod -aG vboxusers $USER && touch .installed-$PKG
fi


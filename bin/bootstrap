mkdir -p /var/tmp && cd /var/tmp/

ME=$(whoami)
PKG=profile
if [ ! -f .installed-$PKG ];
then
sudo locale-gen en_US.UTF-8
touch .installed-$PKG
fi

# Set preferences
# PKG=preferences
# if [ ! -f .installed-$PKG ];
